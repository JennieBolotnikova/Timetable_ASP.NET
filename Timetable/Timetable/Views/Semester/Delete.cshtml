@model TimetableApp.Web.Models.SemesterViewModel
@{ ViewBag.Title = ""; }

<h3>Are you sure you want to <strong>delete this activity type</strong>?</h3>

<div class="alert alert-secondary" role="alert">
    <p><strong>@Html.LabelFor(e => e.SemesterNumber): </strong>@Model.SemesterNumber</p>
    <p><strong>@Html.LabelFor(e => e.SemesterTitle): </strong>@Model.SemesterTitle</p>

</div>
<div>
    @Html.ActionLink("Delete", "ConfirmDelete", "Semester", new { id = Model.SemesterID, }, new { @class = "btn btn-outline-danger" })
</div>
<br />
<div>
    <a asp-action="Index">Назад</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
