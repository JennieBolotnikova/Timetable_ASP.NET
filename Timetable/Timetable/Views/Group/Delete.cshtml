@model TimetableApp.Web.Models.GroupViewModel
@{ ViewBag.Title = ""; }

<h3>Are you sure you want to <strong>delete this group</strong>?</h3>

<div class="alert alert-secondary" role="alert">
    <p><strong>@Html.LabelFor(e => e.GroupName): </strong>@Model.GroupName</p>
    <p><strong>@Html.LabelFor(e => e.GroupNumber): </strong>@Model.GroupNumber</p>
    <p><strong>@Html.LabelFor(e => e.FacultyID): </strong>@Model.FacultyID</p>
    <p><strong>@Html.LabelFor(e => e.NumberOfStudents): </strong>@Model.NumberOfStudents</p>
</div>
<div>
    @Html.ActionLink("Delete", "ConfirmDelete", "Group", new { id = Model.GroupID, }, new { @class = "btn btn-outline-danger" })
</div>
<br />
<div>
    <a asp-action="Index">Назад</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}