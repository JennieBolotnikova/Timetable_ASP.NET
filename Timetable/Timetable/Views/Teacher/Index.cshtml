@model IEnumerable<TimetableApp.Web.Models.TeacherViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div>
                <form asp-controller="Teacher" asp-action="Index" method="post">
                    <p>
                        <input type="text" name="search" />
                        <input type="submit" value="Поиск" class="searchButton" />
                    </p>
                </form>
                <div>
                    <a asp-controller="Teacher" asp-action="Create" class="btn createButton">
                        <span>Добавить запись</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TeacherID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeacherName)
                    </th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th>
                        @Html.DisplayFor(model => item.TeacherID)
                    </th>
                    <th>
                        @Html.DisplayFor(model => item.TeacherName)
                    </th>
                    <th>
                        <a asp-action="Update" asp-controller="Teacher" asp-route-id="@item.TeacherID" class="editLabel">Редактирование</a>
                        <a asp-action="Delete" asp-controller="Teacher" asp-route-id="@item.TeacherID" class="deleteLabel">Удаление</a>
                    </th>
                </tr>
                    
            }
                </tbody>
            </table>
        </div>
    </div>

