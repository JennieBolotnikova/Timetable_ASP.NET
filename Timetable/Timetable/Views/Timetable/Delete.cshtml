@model TimetableApp.Web.Models.TimetableViewModel
@{ ViewBag.Title = ""; }

<h3>Are you sure you want to <strong>delete this lesson</strong>?</h3>

<div class="alert alert-secondary" role="alert">
    <p><strong>@Html.LabelFor(e => e.Date): </strong>@Model.Date</p>
    <p><strong>@Html.LabelFor(e => e.Day): </strong>@Model.Day</p>
    <p><strong>@Html.LabelFor(e => e.BellID): </strong>@Model.BellID</p>
    <p><strong>@Html.LabelFor(e => e.ActivityType): </strong>@Model.ActivityType</p>
    <p><strong>@Html.LabelFor(e => e.Group): </strong>@Model.Group</p>
    <p><strong>@Html.LabelFor(e => e.Teacher): </strong>@Model.Teacher</p>
    <p><strong>@Html.LabelFor(e => e.Classroom): </strong>@Model.Classroom</p>
    <p><strong>@Html.LabelFor(e => e.Semester): </strong>@Model.Semester</p>
</div>
<div>
    @Html.ActionLink("Delete", "ConfirmDelete", "Timetable", new { id = Model.ID, }, new { @class = "btn btn-outline-danger" })
</div>
<br />
<div>
    <a asp-action="Index">Назад</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
