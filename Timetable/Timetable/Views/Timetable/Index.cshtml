@model TimetableApp.Web.Models.PaginatedList<TimetableApp.Web.Models.TimetableViewModel>
@{
    ViewData["Title"] = "Index";
}
<body style=" background-color: #E6F0FA;">
    <div class="container ">
        <div class="table-wrapper">
            <div class="table-title">
                <div>
                    <div>
                        <a asp-controller="Timetable" asp-action="Create" class="btn btn-outline-primary">
                            <span>Добавить запись</span>
                        </a>
                    </div>
                    <br>
                </div>
            </div>
            <table class="table table-bordered"  style="background-color: white; box-shadow: 10px white;">
                <thead class="thead-light">
                    <tr>
                        @foreach (var item in Model)
                        {
                            @if (item == Model.First())
                            {
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSortParm">
                                        @Html.DisplayNameFor(model => item.Date)
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.DaySortParm">
                                        @Html.DisplayNameFor(model => item.Day)
                                    </a>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => item.Bell)
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.DisciplineSortParm">
                                        @Html.DisplayNameFor(model => item.Discipline)
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.ActivityTypeSortParm">
                                        @Html.DisplayNameFor(model => item.ActivityType)
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.GroupSortParm">
                                        @Html.DisplayNameFor(model => item.Group)
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.TeacherSortParm">
                                        @Html.DisplayNameFor(model => item.Teacher)
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.ClassroomSortParm">
                                        @Html.DisplayNameFor(model => item.Classroom)
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.SemesterSortParm">
                                        @Html.DisplayNameFor(model => item.Semester)
                                    </a>
                                </th>
                                <th>Действия</th>
                            }

                        }


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Day)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Bell)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Discipline)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.ActivityType)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Group)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Teacher)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Classroom)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Semester)
                            </td>
                            <td>
                                <a asp-action="Update" asp-controller="Timetable" asp-route-id="@item.ID" class="editLabel btn btn-outline-primary">Редактировать</a>
                                <a asp-action="Delete" asp-controller="Timetable" asp-route-id="@item.ID" class="deleteLabel btn btn-outline-danger">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               class="btn btn-default @prevDisabled">
                Previous
            </a>
            <a asp-action="Index"
               asp-route-pageNumber="0"
               class="btn btn-default @prevDisabled">
                First
            </a>
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex)"
               class="btn btn-default @prevDisabled">
                @(Model.PageIndex)
            </a>
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.TotalPages)"
               class="btn btn-default @nextDisabled">
                Last
            </a>
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               class="btn btn-default @nextDisabled">
                Next
            </a>
        </div>
    </div>
</body>

