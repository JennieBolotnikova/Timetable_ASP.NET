@model IEnumerable<TimetableApp.Web.Models.BellViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div>
                <form asp-controller="Bell" asp-action="Index" method="post">
                    <p>
                        <input type="text" name="search" />
                        <input type="submit" value="Поиск" class="searchButton" />
                    </p>
                </form>
                <div>
                    <a asp-controller="Bell" asp-action="Create" class="btn createButton">
                        <span>Добавить аудиоторию</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BellID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LessonStartTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LessonEndTime)
                    </th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.BellID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.LessonStartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.LessonEndTime)
                        </td>

                        <td>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

