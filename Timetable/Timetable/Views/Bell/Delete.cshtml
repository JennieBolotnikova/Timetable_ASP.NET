@model TimetableApp.Web.Models.BellViewModel
@{ ViewBag.Title = ""; }

<h3>Are you sure you want to <strong>delete this bell</strong>?</h3>

<div class="alert alert-secondary" role="alert">
    <p><strong>@Html.LabelFor(e => e.LessonStartTime): </strong>@Model.LessonStartTime</p>
    <p><strong>@Html.LabelFor(e => e.LessonEndTime): </strong>@Model.LessonEndTime</p>
</div>
<div>
    @Html.ActionLink("Delete", "ConfirmDelete", "Bell", new { id = Model.BellID, }, new { @class = "btn btn-outline-danger" })
</div>
<br />
<div>
    <a asp-action="Index">Назад</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}