@model IEnumerable<TimetableApp.Web.Models.ClassroomTypeViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div>
                <form asp-controller="ClassroomType" asp-action="Index" method="post">
                   
                </form>
                <div>
                    <a asp-controller="ClassroomType" asp-action="Create" class="btn createButton">
                        <span>Добавить запись</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.СlassroomTypeName)
                    </th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td>
                            @Html.DisplayFor(model => item.СlassroomTypeName)
                        </td>
                        <td>
                            <a asp-action="Update" asp-controller="СlassroomType" asp-route-id="@item.ClassroomTypeID" class="editLabel">Редактирование</a>
                            <a asp-action="Delete" asp-controller="СlassroomType" asp-route-id="@item.ClassroomTypeID" class="deleteLabel">Удаление</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

