@model TimetableApp.Web.Models.DayViewModel
@{ ViewBag.Title = ""; }

<h3>Are you sure you want to <strong>delete this day</strong>?</h3>

<div class="alert alert-secondary" role="alert">
    <p><strong>@Html.LabelFor(e => e.DayName): </strong>@Model.DayName</p>
    <p><strong>@Html.LabelFor(e => e.DayShortName): </strong>@Model.DayShortName>
</div>
<div>
    @Html.ActionLink("Delete", "ConfirmDelete", "Day", new { id = Model.DayID, }, new { @class = "btn btn-outline-danger" })
</div>
<br />
<div>
    <a asp-action="Index">Назад</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
