@model IEnumerable<TimetableApp.Web.Models.DayViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div>
                <form asp-controller="Day" asp-action="Index" method="post">
                    
                </form>
                <div>
                    <a asp-controller="Day" asp-action="Create" class="btn createButton">
                        <span>Добавить запись</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.DayName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DayShortName)
                    </th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(model => item.DayName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.DayShortName)
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Day" asp-route-id="@item.DayID" class="editLabel">Редактирование</a>
                        <a asp-action="Delete" asp-controller="Day" asp-route-id="@item.DayID" class="deleteLabel">Удаление</a>

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

