@model IEnumerable<TimetableApp.Web.Models.ClassroomViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div>
                <form asp-controller="Classroom" asp-action="Index" method="post">
                    <p>
                        <input type="text" name="search" />
                        <input type="submit" value="Поиск" class="searchButton" />
                    </p>
                </form>
                <div>
                    <a asp-controller="Classroom" asp-action="Create" class="btn createButton">
                        <span>Добавить запись</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassroomID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassroomNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BuildingID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfSeats)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassroomTypeID)
                    </th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.ClassroomID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.ClassroomNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.BuildingID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.NumberOfSeats)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.ClassroomTypeID)
                        </td>
                        <td>
                            <a asp-action="Update" asp-controller="Classroom" asp-route-id="@item.ClassroomID" class="editLabel">Редактирование</a>
                            <a asp-action="Delete" asp-controller="Classroom" asp-route-id="@item.ClassroomID" class="deleteLabel">Удаление</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

